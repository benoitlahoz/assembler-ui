{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./*"],
      "@": ["."],
      "~/*": ["./app/*"],
      "~": ["./app"]
    }
  },
  "include": [
    "./.nuxt/nuxt.d.ts",
    "**/*.ts",
    "**/*.tsx", 
    "**/*.vue",
    "lib/**/*",
    "components/**/*"
, "app/components/content/code", "app/components/content/component-loader"  ]
}
